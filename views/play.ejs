<%- include('partials/header') %>
<link rel="stylesheet" href="/css/play.css">

<h1><%= game.name %></h1>
<div class="game-container">
    <iframe src="<%= game.link %>" width="800" height="600" frameborder="0"></iframe>
</div>

<div class="comment-section">
    <h2>Comments</h2>
    <div class="comment-form">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" placeholder="Your name" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Your email" required>
        </div>
        <div class="form-group">
            <label for="cmt_input">Comment:</label>
            <textarea id="cmt_input" placeholder="Leave a comment..." rows="4"></textarea>
        </div>
        <div class="form-group rating-group">
            <label for="rating">Score (1-5):</label>
            <div class="rating-input">
                <input type="number" id="rating" name="rating" min="1" max="5" placeholder="Rate 1-5" required>
            </div>
        </div>
        <button class="submit-btn" id="submit-btn" onclick="submitCmt()">Submit</button>
    </div>
    <div id="comments">
        <% if (comments.length > 0) { %>
            <ul>
                <% comments.forEach(function(comment) { %>
                    <li>
                        <h4 class=""><%= comment.name %> (<%= comment.rating %>/5)</h4>
                        <p><%= comment.comment %></p>
                        <small>Posted on <%= comment.time %></small>
                    </li>
                <% }); %>
            </ul>
        <% } %> 
    </div>
</div>
<%- include('partials/footer') %>  
